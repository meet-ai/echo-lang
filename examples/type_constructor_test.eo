// 类型构造函数语法测试
// 测试 Type(expr) 语法（类型构造函数）

func test_type_constructor() -> void {
    let x: int = 42
    
    // 方式1：类型构造函数语法（推荐，更简洁）
    let y1: float = float(x)
    
    // 方式2：as 关键字语法（备选）
    let y2: float = x as float
    
    // 两种方式应该生成相同的代码
    // 验证：y1 == y2
}

